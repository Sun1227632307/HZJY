<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/courselist_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.hzjy.hzjyproduct.ControllerCustomRoundAngleImageView
        android:id="@+id/coursecover"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:shadow_color="0xffe4e4e4"
        app:image_shadow="true"
        app:image_radius="16dp"
        app:image_shadow_radius="5dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开学第一课"
        android:gravity="left"
        android:layout_below="@id/coursecover"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/coursepriceOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原价"
        android:gravity="right"
        android:layout_gravity="right"
        android:textSize="13sp"
        android:layout_below="@id/coursecover"
        android:textColor="@color/gray"
        android:layout_toRightOf="@+id/courseName"/>
    <TextView
        android:id="@+id/coursecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型•学习人数"
        android:gravity="right"
        android:layout_gravity="right"
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:layout_below="@+id/courseName"/>
    <TextView
        android:id="@+id/courseprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="免费"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_below="@id/courseName"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/coursecontent"/>
</RelativeLayout>