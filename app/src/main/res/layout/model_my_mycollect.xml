<?xml version="1.0" encoding="utf-8"?>
<!--    我的收藏 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout android:id="@+id/modelmy_mycollect_main_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:id="@+id/modelmy_mycollect_main_return_button1"
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:background="@drawable/button_return_right_black"
                android:clickable="true"
                android:onClick="onClickMyCollectReturn"/>
            <TextView
                android:id="@+id/modelmy_mycollect_main_titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/textsize18"/>
        </LinearLayout>
        <View
            android:id="@+id/modelmy_mycollect_main_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_gravity="center_horizontal"
            android:background="#e5e5e5"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_below="@id/modelmy_mycollect_main_title"/>
        <LinearLayout android:id="@+id/modelmy_mycollect_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal"
            android:layout_below="@id/modelmy_mycollect_main_line1"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView
                android:id="@+id/modelmy_mycollect_tab_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text=" 课程 "
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/textsize18"/>
            <TextView
                android:id="@+id/modelmy_mycollect_tab_coursepacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text="课程包"
                android:textColor="#333333"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/textsize16"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/modelmy_mycollect_cursor1"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp2"
            android:background="@drawable/image_cusor"
            android:scaleType="matrix"
            android:layout_below="@id/modelmy_mycollect_tab"/>
        <View
            android:id="@+id/modelmy_mycollect_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_gravity="center_horizontal"
            android:background="#e5e5e5"
            android:layout_below="@id/modelmy_mycollect_cursor1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/modelmy_mycollect_line2">
            <com.android.hzjy.hzjyproduct.ModelPtrFrameLayout
                android:id="@+id/modelmy_mycollect_main_content_frame"
                xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cube_ptr:ptr_resistance="1.7"
                cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                cube_ptr:ptr_duration_to_close="200"
                cube_ptr:ptr_duration_to_close_header="300"
                cube_ptr:ptr_keep_header_when_refresh="true"
                cube_ptr:ptr_pull_to_fresh="false" >
                <ScrollView
                    android:id="@+id/modelmy_mycollect_main_content_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/modelmy_mycollect_main_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                </ScrollView>
            </com.android.hzjy.hzjyproduct.ModelPtrFrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/modelmy_mycollect_main_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/modelmy_mycollect_main_line1"/>
    </RelativeLayout>
</LinearLayout>